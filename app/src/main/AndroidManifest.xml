<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.ezequiel.shortlink">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.ShortLink"
        android:networkSecurityConfig="@xml/network_security_config"

        >
        <activity
            android:name="org.ezequiel.shortlink.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustNothing"
            android:theme="@style/Theme.ShortLink.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".PrivacyPolicyHelp"
            android:label="@string/app_name"></activity>


        <provider
            android:name="org.ezequiel.shortlink.Provider"
            android:authorities="${applicationId}.org.ezequiel.shortlink.Provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/filepprovider" />
        </provider>

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-0822808376839371~5131702988"/>

        <meta-data android:name="com.startapp.sdk.APPLICATION_ID" android:value="@string/startapp_app_id" />


    </application>

</manifest>